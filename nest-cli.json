{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-micro-chat/src",
  "monorepo": true,
  "root": "apps/nest-micro-chat",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/nest-micro-chat/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ]
  },
  "projects": {
    "nest-micro-chat": {
      "type": "application",
      "root": "apps/nest-micro-chat",
      "entryFile": "main",
      "sourceRoot": "apps/nest-micro-chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-micro-chat/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "classValidatorShim": false,
              "introspectComments": true
            }
          }
        ]
      }
    },
    "user-management": {
      "type": "application",
      "root": "apps/user-management",
      "entryFile": "main",
      "sourceRoot": "apps/user-management/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-management/tsconfig.app.json",
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "classValidatorShim": false,
              "introspectComments": true
            }
          }
        ]
      }
    },
    "chat-room": {
      "type": "application",
      "root": "apps/chat-room",
      "entryFile": "main",
      "sourceRoot": "apps/chat-room/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat-room/tsconfig.app.json",
