{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@nest-micro-chat/contracts": [
        "libs/contracts/src"
      ],
      "@nest-micro-chat/contracts/*": [
        "libs/contracts/src/*"
      ],
      "@nest-micro-chat/authentication": [
        "libs/authentication/src"
      ],
      "@nest-micro-chat/authentication/*": [
        "libs/authentication/src/*"
      ],
      "@nest-micro-chat/common": [
        "libs/common/src"
      ],
      "@nest-micro-chat/common/*": [
        "libs/common/src/*"
      ]
    }
  }
}